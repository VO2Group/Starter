{
  "name": "starter",
  "version": "1.0.0",
  "description": "Write smart hybrid apps",
  "scripts": {
    "start": "browser-sync start -s www -f '**/*'",
    "check": "jscs www/scripts && npm run check:ios && npm run check:android",
    "copy": "npm run copy:ios && npm run copy:android",
    "build": "tar czvf build/tarball-$(date '+%Y%m%d%H%M%S').tar.gz www",
    "check:ios": "jscs platforms/ios/platform.js",
    "copy:ios": "cp -R www/ platforms/ios/www",
    "check:android": "jscs platforms/android/app/src/main/assets/platform.js",
    "copy:android": "cp -R www/ platforms/android/app/src/main/assets/www",
    "prebuild": "mkdir -p build"
  },
  "devDependencies": {
    "browser-sync": "^2.13.0",
    "jscs": "^3.0.7"
  }
}
