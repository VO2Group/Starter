{
  "name": "starter",
  "version": "1.0.0",
  "description": "Write smart hybrid apps",
  "scripts": {
    "postinstall": "bower install",
    "start": "browser-sync start -s www -f '**/*'",
    "check": "npm run check:www && npm run check:ios && npm run check:android",
    "copy": "npm run copy:ios && npm run copy:android",
    "check:www": "jscs www/scripts",
    "check:ios": "jscs platforms/ios/starter.js",
    "copy:ios": "cp -R www/ platforms/ios/www",
    "check:android": "jscs platforms/android/app/src/main/assets/starter.js",
    "copy:android": "cp -R www/ platforms/android/app/src/main/assets/www"
  },
  "devDependencies": {
    "bower": "^1.7.9",
    "browser-sync": "^2.13.0",
    "jscs": "^3.0.7"
  }
}
