{
  "name": "starter",
  "version": "1.0.0",
  "description": "Write smart hybrid apps",
  "scripts": {
    "start": "browser-sync start -s www -f '**/*'",
    "build": "npm run build:ios && npm run build:android",
    "clean": "npm run clean:ios",
    "build:ios": "cp -R www/ platforms/ios/www",
    "build:android": "cp -R www/ platforms/android/app/src/main/assets/www",
    "clean:ios": "rm -rf platforms/ios/www/"
  },
  "devDependencies": {
    "browser-sync": "^2.13.0",
    "jscs": "^3.0.7"
  }
}
